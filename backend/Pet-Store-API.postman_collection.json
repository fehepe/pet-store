{
	"info": {
		"name": "Pet Store API",
		"description": "GraphQL API for pet store management",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "basic",
		"basic": [
			{
				"key": "username",
				"value": "merchant1",
				"type": "string"
			},
			{
				"key": "password",
				"value": "merchant123",
				"type": "string"
			}
		]
	},
	"item": [
		{
			"name": "Merchant Operations",
			"item": [
				{
					"name": "Create Store",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { createStore(input: { name: \\\"My Pet Store\\\" }) { id name createdAt } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Get My Store",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"{ myStore { id name createdAt } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Create Pet",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { createPet(input: { name: \\\"Fluffy\\\", species: Cat, age: 2, pictureUrl: \\\"https://example.com/cat.jpg\\\", description: \\\"Cute orange cat\\\", breederName: \\\"John Doe\\\", breederEmail: \\\"john@example.com\\\" }) { id name species age status createdAt } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "List All Pets",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"{ listPets { edges { id name species age status } totalCount } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Get Unsold Pets",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"{ unsoldPets { edges { id name species status } totalCount } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Get Sold Pets",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"{ soldPets(startDate: \\\"2025-01-01T00:00:00Z\\\", endDate: \\\"2025-12-31T23:59:59Z\\\") { edges { id name species status } totalCount } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Delete Pet",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { deletePet(id: \\\"{{pet_id}}\\\") }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				}
			]
		},
		{
			"name": "Customer Operations",
			"item": [
				{
					"name": "Get Store by ID",
