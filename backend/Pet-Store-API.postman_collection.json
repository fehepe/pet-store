						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "username",
									"value": "customer1",
									"type": "string"
								},
								{
									"key": "password",
									"value": "customer123",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"{ getStoreByID(id: \\\"{{store_id}}\\\") { id name createdAt } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Browse Available Pets",
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "username",
									"value": "customer1",
									"type": "string"
								},
								{
									"key": "password",
									"value": "customer123",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"{ availablePets(storeID: \\\"{{store_id}}\\\") { edges { id name species age description } totalCount } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Purchase Single Pet",
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "username",
									"value": "customer1",
									"type": "string"
								},
								{
									"key": "password",
									"value": "customer123",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { purchasePet(petID: \\\"{{pet_id}}\\\") { id customerID totalPets createdAt pets { id name status } } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				},
				{
					"name": "Purchase Multiple Pets",
					"request": {
						"auth": {
							"type": "basic",
							"basic": [
								{
									"key": "username",
									"value": "customer1",
									"type": "string"
								},
								{
									"key": "password",
									"value": "customer123",
									"type": "string"
								}
							]
						},
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"mutation { purchasePets(petIDs: [\\\"{{pet_id_1}}\\\", \\\"{{pet_id_2}}\\\"]) { id customerID totalPets createdAt pets { id name status } } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				}
			]
		},
		{
			"name": "Shared Operations",
			"item": [
				{
					"name": "Get Pet by ID",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"query\": \"{ getPet(id: \\\"{{pet_id}}\\\") { id name species age description status breederName createdAt } }\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/graphql",
							"host": ["{{base_url}}"],
							"path": ["graphql"]
						}
					}
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "store_id",
			"value": "replace-with-actual-store-id",
			"type": "string"
		},
		{
			"key": "pet_id",
			"value": "replace-with-actual-pet-id",
			"type": "string"
		},
		{
			"key": "pet_id_1",
			"value": "replace-with-actual-pet-id-1",
			"type": "string"
